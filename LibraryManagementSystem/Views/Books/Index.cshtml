
@{
    ViewData["Title"] = "Books Management";
}


<div class="container-xxl py-5">
    <div class="container">

        <div class="d-flex justify-content-between py-2 my-3 border-bottom ">
            <!-- Title -->
            <h3>Books Management</h3>

            <!-- A button to add a new book -->
            <div>
                <button class="btn btn-sm btn-success" data-toggle="modal" data-target="#addModal">Add New</button>
            </div>

        </div>

        <!-- Custom Filter box Start -->
        <div class="form-row my-3">
            
            <div class="form-group col-md-2">
                <input type="text" class="form-control" id="searchtext" placeholder="Book name or author">
            </div>
            <div class="form-group col-md-2">
                <input type="text" class="form-control" id="searchprice" placeholder="Book price">
            </div>
            <div class="form-group col-md-2">
                @Html.DropDownList("rackId", ViewBag.Racks, "Select Rack", new { @class = "form-control" })
            </div>
            <div class="form-group col-md-2">
                @Html.DropDownList("shelfId", ViewBag.Shelves, "Select Shelf", new { @class = "form-control" })
            </div>
            <div class="form-check col-md-2 pt-2 pl-4">
                <input type="checkbox" class="form-check-input" id="searchavailable">
                <label for="searchavailable" class="form-check-label">Available</label>
            </div>
            <div class="form-group col-md-2">
                <button type="button" class="btn btn-sm btn-primary btn-search mx-1">Search</button>
                <button type="button" class="btn btn-sm btn-secondary btn-cancel">Clear</button>
            </div>

        </div>

        <!-- Custom Filter box End -->

        <!-- Books Table Start -->
        <table id="bookstable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th>BookID</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Available</th>
                    <th>Shelf</th>
                    <th></th>
                    <th>#</th>
                </tr>
            </thead>
        </table>
        <div id="Bfrtip" class="Bfrtip">aaa</div>
        <h5 class="px-2">Total Price: <span class="total">0</span></h5>
        <!-- Books Table End -->

    </div>
</div>

<!-- A Modal to add Book Start -->
<div id="addModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Book</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="addForm">
                <div class="modal-body">

                    <div class="form-group">
                        <label for="code" class="col-form-label">Book Code:</label>
                        <input type="text" class="form-control form-control-sm" id="code" name="code" required>
                    </div>

                    <div class="form-group">
                        <label for="name" class="col-form-label">Book Name:</label>
                        <input type="text" class="form-control form-control-sm" id="name" name="name" required>
                    </div>

                    <div class="form-group">
                        <label for="author" class="col-form-label">Author:</label>
                        <input type="text" class="form-control form-control-sm" id="author" name="author" required>
                    </div>

                    <div class="form-group">
                        <label for="price" class="col-form-label">Price:</label>
                        <input type="text" class="form-control form-control-sm" id="price" name="price" required>
                    </div>

                    <div class="form-group">
                        <label for="shelf" class="col-form-label">Shelf:</label>
                        @Html.DropDownList("shelf", ViewBag.Shelves, "Select Shelf", new { @class = "form-control form-control-sm" })
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="available">
                        <label for="available" class="form-check-label">Is Available?</label>

                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary btn-add">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- A Modal to add Book End -->

<!-- A Modal to update Book Start -->
<div id="editModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Book</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="updateForm">
                <div class="modal-body">

                    <div class="form-group">
                        <label for="idEdit" class="col-form-label">Book Id:</label>
                        <input type="text" class="form-control form-control-sm" id="idEdit" disabled="disabled">
                    </div>

                    <div class="form-group">
                        <label for="codeEdit" class="col-form-label">Book Code:</label>
                        <input type="text" class="form-control form-control-sm" id="codeEdit" name="codeEdit" required>
                    </div>

                    <div class="form-group">
                        <label for="nameEdit" class="col-form-label">Book Name:</label>
                        <input type="text" class="form-control form-control-sm" id="nameEdit" name="nameEdit" required>
                    </div>

                    <div class="form-group">
                        <label for="authorEdit" class="col-form-label">Author:</label>
                        <input type="text" class="form-control form-control-sm" id="authorEdit" name="authorEdit" required>
                    </div>

                    <div class="form-group">
                        <label for="priceEdit" class="col-form-label">Price:</label>
                        <input type="text" class="form-control form-control-sm" id="priceEdit" name="priceEdit" required>
                    </div>

                    <div class="form-group">
                        <label for="shelfEdit" class="col-form-label">Shelf:</label>
                        @Html.DropDownList("shelfEdit", ViewBag.Shelves, "Select Shelf", new { @class = "form-control form-control-sm" })
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-control" id="availableEdit">
                        <label for="availableEdit" class="form-check-label">Is Available?</label>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary btn-update">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- A Modal to edit Book End -->

<!-- A Modal to view Book Start -->
<div id="viewModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">View Book</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">

                <div class="form-group">
                    <label for="idEdit" class="col-form-label">Book Id:</label>
                    <input type="text" class="form-control form-control-sm" id="idView" disabled="disabled">
                </div>

                <div class="form-group">
                    <label for="codeEdit" class="col-form-label">Book Code:</label>
                    <input type="text" class="form-control form-control-sm" id="codeView" disabled="disabled">
                </div>

                <div class="form-group">
                    <label for="nameEdit" class="col-form-label">Book Name:</label>
                    <input type="text" class="form-control form-control-sm" id="nameView" disabled="disabled">
                </div>

                <div class="form-group">
                    <label for="authorEdit" class="col-form-label">Author:</label>
                    <input type="text" class="form-control form-control-sm" id="authorView" disabled="disabled">
                </div>

                <div class="form-group">
                    <label for="priceEdit" class="col-form-label">Price:</label>
                    <input type="text" class="form-control form-control-sm" id="priceView" disabled="disabled">
                </div>

                <div class="form-group">
                    <label for="shelfEdit" class="col-form-label">Shelf:</label>
                    <input type="text" class="form-control form-control-sm" id="priceView" disabled="disabled">
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-control" id="availableView" disabled="disabled">
                    <label for="availableView" class="form-check-label">Is Available?</label>
                </div>


            </div>


        </div>
    </div>
</div>
<!-- A Modal to view Book End -->
